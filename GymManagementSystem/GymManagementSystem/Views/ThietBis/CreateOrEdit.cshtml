@model GymManagementSystem.Models.ThietBi
@{
    bool isEditing = Model != null && Model.Id > 0;
    ViewBag.Title = isEditing ? "Chỉnh Sửa Thiết Bị" : "Thêm Thiết Bị Mới";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(isEditing ? "Edit" : "Create", "ThietBis", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (isEditing)
    { @Html.HiddenFor(model => model.Id) }

<div class="mb-3">
    @Html.LabelFor(model => model.TenThietBi, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.TenThietBi, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.TenThietBi, "", new { @class = "text-danger" })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "form-label" })
    @Html.TextAreaFor(model => model.MoTa, 3, 40, new { @class = "form-control" })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.NgayMua, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.NgayMua, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.NgayMua?.ToString("yyyy-MM-dd") } })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "form-label" })
    @Html.EnumDropDownListFor(model => model.TinhTrang, htmlAttributes: new { @class = "form-select" })
    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
</div>

<div class="offcanvas-footer">
    <div class="d-grid gap-2">
        <input type="submit" value="@(isEditing ? "Lưu Thay Đổi" : "Thêm Thiết Bị")" class="btn btn-offcanvas-primary" />
    </div>
</div>
}