@model GymManagementSystem.Models.Phong
@{
    bool isEditing = Model != null && Model.Id > 0;
    ViewBag.Title = isEditing ? "Chỉnh Sửa Phòng" : "Tạo Phòng Mới";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(isEditing ? "Edit" : "Create", "Phongs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (isEditing)
    { @Html.HiddenFor(model => model.Id) }

<div class="mb-3">
    @Html.LabelFor(model => model.TenPhong, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.MaPhong, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.MaPhong, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
</div>

<div class="offcanvas-footer">
    <div class="d-grid gap-2">
        <input type="submit" value="@(isEditing ? "Lưu Thay Đổi" : "Tạo Mới")" class="btn btn-offcanvas-primary" />
    </div>
</div>
}