@* File: Views/HoiVien/_BookingFormPartial.cshtml *@

@using (Html.BeginForm("TaoLichTap", "HoiVien", FormMethod.Post, new { id = "bookingFormAjax" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">Đặt lịch tập</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" id="ngayDatLich" name="ngayDatLich" />

        <div class="form-group">
            <label>Chọn Huấn luyện viên</label>
            @Html.DropDownList("huanLuyenVienId", (SelectList)ViewBag.DanhSachPT, "--- Chọn PT ---", new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Giờ bắt đầu</label>
            <input type="time" name="gioBatDau" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Ghi chú</label>
            <textarea name="ghiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Gửi Yêu Cầu</button>
    </div>
}