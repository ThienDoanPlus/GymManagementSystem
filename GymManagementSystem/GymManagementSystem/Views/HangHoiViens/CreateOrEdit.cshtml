@model GymManagementSystem.Models.ViewModels.HangHoiVienViewModel
@{
    bool isEditing = Model.HangHoiVien != null && Model.HangHoiVien.Id > 0;
    ViewBag.Title = isEditing ? "Chỉnh Sửa Hạng Hội Viên" : "Tạo Hạng Mới";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(isEditing ? "Edit" : "Create", "HangHoiViens", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (isEditing)
    { @Html.HiddenFor(model => model.HangHoiVien.Id) }

<div class="mb-3">
    @Html.LabelFor(model => model.HangHoiVien.TenHang, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.HangHoiVien.TenHang, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.HangHoiVien.TenHang, "", new { @class = "text-danger" })
</div>
<div class="mb-3">
    @Html.LabelFor(model => model.HangHoiVien.NguongChiTieu, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.HangHoiVien.NguongChiTieu, new { htmlAttributes = new { @class = "form-control", type = "number" } })
    @Html.ValidationMessageFor(model => model.HangHoiVien.NguongChiTieu, "", new { @class = "text-danger" })
</div>
<div class="mb-3">
    @Html.LabelFor(model => model.HangHoiVien.DacQuyen, htmlAttributes: new { @class = "form-label" })
    @Html.TextAreaFor(model => model.HangHoiVien.DacQuyen, 3, 40, new { @class = "form-control" })
</div>

<div class="mb-3">
    <label class="form-label">Khuyến Mãi Đặc Quyền</label>
    @Html.ListBoxFor(m => m.SelectedKhuyenMaiIds, Model.DanhSachKhuyenMai, new { @class = "form-select", id = "khuyenMaiSelect" })
</div>

<div class="offcanvas-footer">
    <div class="d-grid gap-2">
        <input type="submit" value="@(isEditing ? "Lưu Thay Đổi" : "Tạo Mới")" class="btn btn-offcanvas-primary" />
    </div>
</div>
}

<script>
    // Khởi tạo Select2 cho dropdown khuyến mãi
    $('#khuyenMaiSelect').select2({
        theme: "bootstrap-5",
        placeholder: "Chọn các khuyến mãi...",
        dropdownParent: $('#crudOffcanvas'), // Rất quan trọng: để dropdown hiển thị đúng trong Offcanvas
        width: '100%'
    });
</script>