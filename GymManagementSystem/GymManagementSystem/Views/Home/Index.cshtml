@{
    ViewBag.Title = "Homepage";
}

<div class="hero-section">
    <!-- Nội dung chính giữa -->
    <div class="container-fluid">
        <h1 class="hero-title text-white">
            Siết cơ bắp,<br>Thắp tinh thần
        </h1>
    </div>

    <!-- Các thẻ thông tin (Stat Cards) -->
    <div class="stat-card card-hours">
        <div class="icon"><i class="fas fa-clock"></i></div>
        <div class="value">1.5</div>
        <div class="label">Hours</div>
    </div>
    <div class="stat-card card-poses">
        <div class="icon"><i class="fas fa-running"></i></div>
        <div class="value">20</div>
        <div class="label">Poses</div>
    </div>
    <div class="stat-card card-kcal">
        <div class="icon"><i class="fas fa-fire-alt"></i></div>
        <div class="value">550</div>
        <div class="label">Kcal</div>
    </div>
    <div class="stat-card card-sets">
        <div class="icon"><i class="fas fa-dumbbell"></i></div>
        <div class="value">5</div>
        <div class="label">Sets</div>
    </div>

    <!-- Chữ dọc hai bên -->
    <div class="side-nav prev">T R Ứ Ớ C</div>
    <div class="side-nav next">S A U</div>

    <!-- Thông tin góc dưới bên trái -->
    <div class="bottom-left-info">
        <div class="avatar-group">
            <!-- Thay bằng ảnh thật -->
            <img src="https://i.pravatar.cc/40?img=1" alt="Avatar 1" class="avatar">
            <img src="https://i.pravatar.cc/40?img=2" alt="Avatar 2" class="avatar">
            <img src="https://i.pravatar.cc/40?img=3" alt="Avatar 3" class="avatar">
        </div>
        <div class="happy-spirits-text">
            <strong>12k+</strong> Đánh giá
        </div>
    </div>

    <!-- Nút bắt đầu góc dưới bên phải -->
    <div class="bottom-right-action">
        <a href="#" class="btn-start">Triển ngay &gt;&gt;&gt;</a>
    </div>
</div>