@model IEnumerable<GymManagementSystem.Models.GoiTap>

@{
    ViewBag.Title = "Quản Lý Gói Tập";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<h2><i class="fas fa-dumbbell"></i> @ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary my-3">
        <i class="fas fa-plus-circle"></i> Tạo Gói Tập Mới
    </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border-primary h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.TenGoi)</h5>
                </div>
                <div class="card-body">
                    <h3 class="card-title text-success font-weight-bold">@item.GiaTien.ToString("C0", culture)</h3>
                    <p class="card-text">
                        <strong>Số buổi với PT:</strong> @Html.DisplayFor(modelItem => item.SoBuoiTapVoiPT) buổi
                    </p>
                    <p class="card-text text-muted">
                        @Html.DisplayFor(modelItem => item.MoTaQuyenLoi)
                    </p>
                </div>
                <div class="card-footer text-center bg-transparent border-top-0">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning" title="Sửa">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info" title="Xem Chi tiết">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" title="Xóa">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>