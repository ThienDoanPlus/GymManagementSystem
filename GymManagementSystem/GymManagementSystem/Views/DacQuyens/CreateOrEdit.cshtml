@model GymManagementSystem.Models.DacQuyen
@{
    bool isEditing = Model != null && Model.Id > 0;
    ViewBag.Title = isEditing ? "Chỉnh Sửa Đặc Quyền" : "Tạo Đặc Quyền Mới";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(isEditing ? "Edit" : "Create", "DacQuyens", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (isEditing)
    { @Html.HiddenFor(model => model.Id) }

<div class="mb-3">
    @Html.LabelFor(model => model.TenDacQuyen, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.TenDacQuyen, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.TenDacQuyen, "", new { @class = "text-danger" })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "form-label" })
    @Html.TextAreaFor(model => model.MoTa, 3, 40, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
</div>

<div class="mb-3">
    @Html.LabelFor(model => model.IconClass, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.IconClass, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: fas fa-parking" } })
    @Html.ValidationMessageFor(model => model.IconClass, "", new { @class = "text-danger" })
    <small class="form-text text-muted">Sử dụng class của Font Awesome 5.</small>
</div>

<div class="offcanvas-footer">
    <div class="d-grid gap-2">
        <input type="submit" value="@(isEditing ? "Lưu Thay Đổi" : "Tạo Mới")" class="btn btn-offcanvas-primary" />
    </div>
</div>
}