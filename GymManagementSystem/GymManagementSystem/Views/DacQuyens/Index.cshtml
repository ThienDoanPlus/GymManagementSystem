
@model IEnumerable<GymManagementSystem.Models.DacQuyen>
@using GymManagementSystem.Models.ViewModels

@{
    ViewBag.Title = "Quản lý Đặc Quyền";
    var headerViewModel = new AdminPageHeaderViewModel
    {
        Title = ViewBag.Title,
        CreateActionUrl = Url.Action("Create"),
        SearchAction = "Index",
        SearchController = "DacQuyens",
        CurrentFilter = ViewBag.CurrentFilter
    };
}

@Html.Partial("_AdminPageHeader", headerViewModel)

<table class="modern-table">
    <thead>
        <tr>
            <th>Tên Đặc Quyền</th>
            <th>Mô Tả</th>
            <th>Icon</th>
            <th class="text-end">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenDacQuyen)</td>
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.IconClass))
                    {
                        <i class="@item.IconClass"></i>
                    }
                </td>
                <td>
                    <!-- Gọi Partial View chứa các nút Sửa, Chi tiết, Xóa -->
                    @Html.Partial("_CrudButtons", item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>