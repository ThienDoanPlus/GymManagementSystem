<head>
    <link href="@Url.Content("~/Content/Manage/qr.css")" rel="stylesheet" type="text/css" />
</head>

@{
    ViewBag.Title = "Quét mã QR Check-in";
}
<link href="@Url.Content("~/Content/qr-scanner.css")" rel="stylesheet" type="text/css" />

<div class="qr-scanner-wrapper">
    <div class="page-header text-center mb-4">
        <h2 class="text-white">@ViewBag.Title</h2>
        <p class="text-muted">Đặt mã QR của hội viên vào trong vùng quét</p>
    </div>

    <div id="qr-reader"></div>

    <div id="scan-result"></div>
</div>


@section Scripts {
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // Dừng camera và bộ quét
            html5QrcodeScanner.clear().catch(error => {
                console.error("Failed to clear html5QrcodeScanner.", error);
            });

            const resultDiv = document.getElementById('scan-result');
            resultDiv.innerHTML = `<div class="alert-scan alert-info">Đã quét được mã. Đang xác thực...</div>`;

            fetch(`/api/checkin/verify?id=${decodedText}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        resultDiv.innerHTML = `
                                <div class="alert-scan alert-success">
                                    <h4><i class="fas fa-check-circle me-2"></i>Xác thực thành công!</h4>
                                    <p><strong>Họ Tên:</strong> ${data.hoTen}</p>
                                    <p><strong>Email:</strong> ${data.email}</p>
                                    <p><strong>Trạng thái:</strong> <span style="color: var(--neon-green);">Hợp lệ</span></p>
                                    <hr style="border-color: #333;">
                                    <p class="mb-0"><i>Trang sẽ tự động làm mới sau 5 giây...</i></p>
                                </div>`;
                        setTimeout(() => {
                            location.reload();
                        }, 5000);
                    } else {
                        resultDiv.innerHTML = `
                                <div class="alert-scan alert-danger">
                                    <h4><i class="fas fa-times-circle me-2"></i>Xác thực thất bại!</h4>
                                    <p>${data.message}</p>
                                    <hr style="border-color: #333;">
                                    <button onclick="location.reload()" class="btn-start" style="background: #dc3545; color: #fff; box-shadow: none;">Thử lại</button>
                                </div>`;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultDiv.innerHTML = `<div class="alert-scan alert-danger">Có lỗi xảy ra khi kết nối tới server.</div>`;
                });
        }

        function onScanFailure(error) {
            // Xử lý lỗi quét (thường là không tìm thấy QR code)
            // console.warn(`QR error = ${error}`);
        }

        var html5QrcodeScanner = new Html5QrcodeScanner(
            "qr-reader",
            {
                fps: 10,
                qrbox: { width: 250, height: 250 } // Định nghĩa vùng quét hình vuông
            },
            false // verbose
        );

        html5QrcodeScanner.render(onScanSuccess, onScanFailure);
    </script>
}