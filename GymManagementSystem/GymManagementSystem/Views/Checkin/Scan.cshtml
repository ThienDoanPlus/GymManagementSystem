<head>
    <link href="@Url.Content("~/Content/Manage/qr.css")" rel="stylesheet" type="text/css" />
</head>

@{
    ViewBag.Title = "Quét mã QR Check-in";
}
<link href="@Url.Content("~/Content/qr-scanner.css")" rel="stylesheet" type="text/css" />

<div class="qr-scanner-wrapper">
    <div class="page-header text-center mb-4">
        <h2 class="text-white">@ViewBag.Title</h2>
        <p class="text-muted">Đặt mã QR của hội viên vào trong vùng quét</p>
    </div>

    <div id="qr-reader"></div>

    <div id="scan-result"></div>
</div>


@section Scripts {
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

    <script>
        // Lấy các URL cần thiết từ Razor để đảm bảo tính linh hoạt
        const verifyUrl = '@Url.Action("Verify", "CheckinApi")'; // Trỏ đến CheckinApiController
        const defaultAvatarUrl = '@Url.Content("~/Content/Images/default-avatar.png")';

        function displayResult(data) {
            const resultDiv = document.getElementById('scan-result');
            let resultHtml = '';

            // Trường hợp server báo lỗi chung (ví dụ: không tìm thấy user)
            if (!data || !data.success) {
                resultHtml = `
                    <div class="alert-scan alert-danger">
                        <h4><i class="fas fa-times-circle me-2"></i>Xác thực thất bại!</h4>
                        <p>${data.message || 'Có lỗi không xác định.'}</p>
                        <hr style="border-color: #333;">
                        <button onclick="location.reload()" class="btn-start" style="background: #dc3545; color: #fff; box-shadow: none;">Quét Lại</button>
                    </div>`;
            } else {
                // Trường hợp xác thực user thành công, kiểm tra quyền truy cập
                const statusClass = data.accessGranted ? 'alert-success' : 'alert-warning';
                const statusIcon = data.accessGranted ? 'fa-check-circle' : 'fa-exclamation-triangle';
                const statusText = data.accessGranted ? 'HỢP LỆ' : 'KHÔNG HỢP LỆ';

                // Hiển thị thông tin gói tập chỉ khi là Hội viên
                const goiTapInfoHtml = data.vaiTro === 'HoiVien' ? `
                    <p><strong>Gói tập:</strong> ${data.tenGoiTap || 'Không có'}</p>
                    <p><strong>Hết hạn:</strong> ${data.ngayHetHan || 'N/A'}</p>
                ` : '';

                resultHtml = `
                    <div class="alert-scan ${statusClass}">
                        <h4><i class="fas ${statusIcon} me-2"></i>Xác thực thành công!</h4>
                        <div class="member-info">
                            <img src="${data.avatarUrl || defaultAvatarUrl}" alt="Avatar" style="width:50px; height: 50px;" />
                            <div>
                                <p><strong>Họ Tên:</strong> ${data.hoTen}</p>
                                <p><strong>Email:</strong> ${data.email}</p>
                                <p><strong>Vai trò:</strong> ${data.vaiTro}</p>
                                ${goiTapInfoHtml}
                            </div>
                        </div>
                        <hr style="border-color: #333;">
                        <p class="mb-0"><strong>Trạng thái:</strong> <span style="font-weight: bold;">${statusText}</span></p>
                        <p class="mb-2"><strong>Chi tiết:</strong> ${data.message}</p>
                        <hr style="border-color: #333;">
                        <p class="mb-0 small text-muted"><i>Trang sẽ tự động làm mới sau 10 giây...</i></p>
                    </div>`;

                setTimeout(() => { location.reload(); }, 10000);
            }
            resultDiv.innerHTML = resultHtml;
        }

        function onScanSuccess(decodedText, decodedResult) {
            if (!decodedText || typeof decodedText !== 'string' || decodedText.trim() === '') {
                return; 
            }

            html5QrcodeScanner.clear().catch(error => console.error("Failed to clear scanner.", error));

            document.getElementById('qr-reader').style.display = 'none';
            const resultDiv = document.getElementById('scan-result');
            resultDiv.innerHTML = `<div class="alert-scan alert-info">Đã quét được mã. Đang xác thực...</div>`;

            fetch(`${verifyUrl}?id=${decodedText}`)
                .then(response => {
                    if (!response.ok) { throw new Error('Network response was not ok'); }
                    return response.json();
                })
                .then(data => {
                    displayResult(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                    displayResult({ success: false, message: 'Có lỗi xảy ra khi kết nối tới server.' });
                });
        }

        /**
         * Callback khi quét thất bại (không tìm thấy QR trong frame)
         */
        function onScanFailure(error) {
            // Để trống hàm này để không spam console log
        }

        // Khởi tạo bộ quét
        var html5QrcodeScanner = new Html5QrcodeScanner(
            "qr-reader",
            {
                fps: 10,
                qrbox: { width: 250, height: 250 }
            },
            false // verbose
        );

        // Bắt đầu quét
        html5QrcodeScanner.render(onScanSuccess, onScanFailure);
    </script>
}