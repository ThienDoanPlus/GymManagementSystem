
@using GymManagementSystem.Helpers
@model GymManagementSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="form-panel">
    <div class="text-center mb-4">
        <i class="fas fa-user-plus fa-3x text-primary"></i>
        <h2 class="mt-2">@ViewBag.Title</h2>
        <p class="text-muted">Gia nhập cộng đồng GYM của chúng tôi!</p>
    </div>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.HoTen)
            @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.VaiTro)
            @Html.DropDownListFor(m => m.VaiTro,
                new SelectList(new[] { "HoiVien", "PT", "QuanLy" }.Select(r => new { Value = r, Text = RoleHelper.GetVietnameseRoleName(r) }), "Value", "Text"),
                "--- Vui lòng chọn vai trò ---",
                new { @class = "form-control", id = "vaiTroDropdown" })
        </div>

        <div class="form-group">
            <label for="avatarFile" class="form-label">Ảnh Đại Diện (Tùy chọn)</label>
            <input type="file" name="avatarFile" id="avatarFile" class="form-control" accept="image/*" />
        </div>

        <div id="hoiVienInfo" style="display:none;">
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.ChieuCao)
                @Html.TextBoxFor(m => m.ChieuCao, new { @class = "form-control", type = "number", step = "0.1" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CanNang)
                @Html.TextBoxFor(m => m.CanNang, new { @class = "form-control", type = "number", step = "0.1" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MucTieuTapLuyen)
                @Html.TextAreaFor(m => m.MucTieuTapLuyen, 3, 40, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MaGioiThieuNhapVao)
                @Html.TextBoxFor(m => m.MaGioiThieuNhapVao, new { @class = "form-control", placeholder = "Ví dụ: ABCDEF" })
            </div>
        </div>

        <div class="form-group mt-4">
            <input type="submit" class="btn btn-primary btn-block btn-lg" value="Đăng ký" />
        </div>
        <p class="text-center mt-3">
            Đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login")
        </p>
    }
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#vaiTroDropdown').change(function () {
                if ($(this).val() === 'HoiVien') {
                    $('#hoiVienInfo').slideDown();
                } else {
                    $('#hoiVienInfo').slideUp();
                }
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. Tìm các phần tử cần thiết
            const vaiTroDropdown = document.getElementById('vaiTroDropdown');
            const hoiVienInfo = document.getElementById('hoiVienInfo');

            // 2. Thêm kiểm tra để đảm bảo các phần tử tồn tại trước khi thêm sự kiện
            if (vaiTroDropdown && hoiVienInfo) {
                // 3. Gắn sự kiện 'change'
                vaiTroDropdown.addEventListener('change', function () {
                    // 4. Lấy giá trị của dropdown
                    // 'this' ở đây chính là phần tử vaiTroDropdown
                    if (this.value === 'HoiVien') {
                        // Hiển thị phần thông tin hội viên
                        hoiVienInfo.style.display = 'block';
                    } else {
                        // Ẩn phần thông tin hội viên
                        hoiVienInfo.style.display = 'none';
                    }
                });
            }
        });
    </script>
}