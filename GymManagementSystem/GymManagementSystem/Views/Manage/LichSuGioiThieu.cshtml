@model GymManagementSystem.Models.ViewModels.LichSuGioiThieuViewModel
@{
    ViewBag.Title = "Lịch Sử Giới Thiệu";
}
<link href="@Url.Content("~/Content/Manage/invite.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/CRUD/crud.css")" rel="stylesheet" type="text/css" />

<div class="referral-wrapper">
    <div class="page-header mb-4">
        <h2 class="text-white">@ViewBag.Title</h2>
        <p class="text-muted">Ghi nhận những đóng góp của bạn cho cộng đồng Fitusion!</p>
    </div>

    <div class="row">
        <!-- Cột bên trái: Thống kê & Phần thưởng -->
        <div class="col-lg-4">
            <!-- Card Tổng quan -->
            <div class="stat-card">
                <p class="stat-label">Bạn đã giới thiệu thành công</p>
                <h1 class="stat-value">@Model.TongSoNguoiDaGioiThieu</h1>
                <p class="stat-label">thành viên mới!</p>
            </div>

            <!-- Card Phần thưởng tiếp theo -->
            <div class="stat-card reward-card">
                <h4 class="text-white">Phần Thưởng Tiếp Theo</h4>
                @if (Model.MocThuongTiepTheo > 0)
                {
                    <p class="stat-label mt-3">
                        Giới thiệu thêm <strong>@Model.SoNguoiCanThem người nữa</strong> để đạt mốc
                        <strong>@Model.MocThuongTiepTheo người</strong> và nhận:
                    </p>
                    <div class="reward-name">
                        @Model.CacMocThuong[Model.MocThuongTiepTheo]
                    </div>
                }
                else
                {
                    <div class="text-center mt-4">
                        <i class="fas fa-crown fa-3x" style="color: var(--vip-gold);"></i>
                        <p class="stat-label mt-3">Bạn đã đạt được tất cả các mốc phần thưởng. Xin chân thành cảm ơn!</p>
                    </div>
                }
            </div>
        </div>

        <!-- Cột bên phải: Danh sách chi tiết -->
        <div class="col-lg-8">
            <div class="referral-list-card">
                <h4 class="text-white mb-4">Danh sách thành viên đã giới thiệu</h4>
                @if (Model.DanhSachNguoiDuocGioiThieu.Any())
                {
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>Ngày Tham Gia</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DanhSachNguoiDuocGioiThieu)
                            {
                                <tr>
                                    <td>
                                        <img src="@(item.AvatarUrl ?? "https://i.pravatar.cc/40?u=" + item.Email)" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%;" />
                                    </td>
                                    <td>@item.HoTen</td>
                                    <td>@item.Email</td>
                                    <td>@item.NgayThamGia.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">Bạn chưa giới thiệu được thành viên nào. Hãy chia sẻ mã giới thiệu của bạn ngay!</p>
                }
            </div>
        </div>
    </div>
</div>