@model GymManagementSystem.Models.ViewModels.LichSuGioiThieuViewModel
@{
    ViewBag.Title = "Lịch Sử Giới Thiệu";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <!-- Panel tổng kết -->
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Tổng Quan</h3>
            </div>
            <div class="panel-body text-center">
                <p>Bạn đã giới thiệu thành công</p>
                <h1 style="font-size: 4em; margin-top: 0;">@Model.TongSoNguoiDaGioiThieu</h1>
                <p>thành viên mới!</p>
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Phần Thưởng Tiếp Theo</h3>
            </div>
            <div class="panel-body">
                @if (Model.MocThuongTiepTheo > 0)
                {
                    <p>
                        Hãy giới thiệu thêm <strong>@Model.SoNguoiCanThem người nữa</strong> để đạt mốc
                        <strong>@Model.MocThuongTiepTheo người</strong> và nhận phần thưởng:
                    </p>
                    <p class="well well-sm">
                        <strong>@Model.CacMocThuong[Model.MocThuongTiepTheo]</strong>
                    </p>
                }
                else
                {
                    <p>Bạn đã đạt được tất cả các mốc phần thưởng. Xin chân thành cảm ơn!</p>
                }
            </div>
        </div>
    </div>

    <!-- Panel danh sách chi tiết -->
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Danh sách thành viên đã giới thiệu</h3>
            </div>
            <div class="panel-body">
                @if (Model.DanhSachNguoiDuocGioiThieu.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>Ngày Tham Gia</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DanhSachNguoiDuocGioiThieu)
                            {
                                <tr>
                                    <td>@item.HoTen</td>
                                    <td>@item.Email</td>
                                    <td>@item.NgayThamGia.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Bạn chưa giới thiệu được thành viên nào. Hãy chia sẻ mã giới thiệu của bạn ngay!</p>
                }
            </div>
        </div>
    </div>
</div>