@model GymManagementSystem.Models.BaiTap
@using GymManagementSystem.Helpers

<h4>Chi tiết: @Model.TenBaiTap</h4>
<dl>
    <dt class="text-muted">Nhóm cơ chính</dt>
    <dd class="mb-3">@Model.NhomCoChinh</dd>

    <dt class="text-muted">Các bước thực hiện</dt>
    <dd class="mb-3">
        <ol>
            @foreach (var buoc in Model.CacBuocThucHien.OrderBy(b => b.ThuTuBuoc))
            {
                <li>@buoc.NoiDung</li>
            }
        </ol>
    </dd>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <dt class="text-muted">Ảnh Minh Họa</dt>
        <dd class="mb-3">
            <img src="@Model.ImageUrl" alt="@Model.TenBaiTap" class="img-responsive" style="max-width: 300px; border-radius: 8px;" />
        </dd>
    }

    @if (!string.IsNullOrEmpty(Model.VideoUrl))
    {
        <dt class="text-muted">Video Hướng Dẫn</dt>
        <dd class="mb-3">
            @VideoHelper.EmbedYouTubeVideo(Model.VideoUrl)
        </dd>
    }
</dl>
<div class="offcanvas-footer">
    <button type="button" class="btn btn-offcanvas-secondary" data-bs-dismiss="offcanvas">Đóng</button>
</div>