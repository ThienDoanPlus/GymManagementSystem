<head>
    <link href="@Url.Content("~/Content/CRUD/crud.css")" rel="stylesheet" type="text/css" />
</head>

@model IEnumerable<GymManagementSystem.Models.KeHoach>
@using GymManagementSystem.Models.ViewModels

@{
    ViewBag.Title = "Quản lý Kế Hoạch Tập Luyện";

    // Khởi tạo ViewModel cho Header
    var headerViewModel = new AdminPageHeaderViewModel
    {
        Title = ViewBag.Title,
        CreateActionUrl = Url.Action("Create"),
        SearchAction = "Index",
        SearchController = "KeHoachsAdmin", // Đảm bảo đúng tên Controller
        CurrentFilter = ViewBag.CurrentFilter
    };
}

@Html.Partial("_AdminPageHeader", headerViewModel)

<!-- Form bao bọc cả header và bảng để xóa hàng loạt -->
@using (Html.BeginForm("DeleteMultiple", "KeHoachsAdmin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!-- Gọi Header chung -->
    @Html.Partial("_DeleteSelectedButton")

    <table class="modern-table">
        <thead>
            <tr>
                <th style="width: 40px;"><input type="checkbox" class="form-check-input" id="checkAll" /></th>
                <th>Tên Kế Hoạch</th>
                <th>Số Ngày</th>
                <th>Trạng Thái</th>
                <th class="text-end">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" class="form-check-input row-checkbox" name="idsToDelete" value="@item.Id" /></td>
                    <td>@Html.DisplayFor(modelItem => item.TenKeHoach)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThoiGianThucHien)</td>
                    <td>
                        @if (item.IsActive)
                        {<span class="status-badge status-active">Kích hoạt</span> }
                        else
                        { <span class="status-badge status-inactive">Vô hiệu hóa</span>}
                    </td>
                    <td>
                        <!-- Gọi các nút CRUD chung -->
                        @Html.Partial("_CrudButtons", item.Id)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}