<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.6.2/dist/cyborg/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Gym Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Trang Chủ", "Index", "Home", null, new { @class = "nav-link" })</li>

                    @* Chỉ hiển thị link này nếu người dùng đã đăng nhập VÀ có vai trò là "QuanLy" *@
                    @if (Request.IsAuthenticated && User.IsInRole("QuanLy"))
                    {
                        <li class="nav-item">@Html.ActionLink("Quản Lý Gói Tập", "Index", "GoiTaps", null, new { @class = "nav-link" })</li>
                    }

                    @* Chỉ hiển thị link này nếu người dùng là Hội Viên *@
                    @if (Request.IsAuthenticated && User.IsInRole("HoiVien"))
                    {
                        <li class="nav-item">@Html.ActionLink("Các Gói Tập", "DanhSachGoiTap", "HoiVien", null, new { @class = "nav-link" })</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("PT"))
                    {
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "PT", null, new { @class = "nav-link" })</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content py-4">
        @RenderBody()
        <hr />
        <footer>
            <p>© @DateTime.Now.Year - Gym Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
